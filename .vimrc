" Allow bells and whistles
set nocompatible

" Allow special characters and symbols
set encoding=utf-8 " do this before :scriptencoding
scriptencoding utf-8

" Prevent anoying flashes and beeps
set belloff=all

" Show commands while being typed
set showcmd

